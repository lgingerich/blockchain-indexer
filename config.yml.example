# Chain configuration
chain:
  name: "arbitrum"
  rpc_urls:
    - "https://arbitrum.llamarpc.com"
    - "https://rpc.ankr.com/arbitrum"
    - "https://arbitrum.gateway.tenderly.co"

  name: "ethereum"
  rpc_urls:
    - "https://eth.llamarpc.com"
    - "https://rpc.ankr.com/eth"
    - "https://eth.drpc.org"

  name: "zero" # Zero Network by Zerion
  rpc_urls:
    - "https://rpc.zerion.io/v1/zero"

  name: "zksync"
  rpc_urls:
    - "https://mainnet.era.zksync.io"
    - "https://zksync.meowrpc.com"
    - "https://1rpc.io/zksync2-era"

# Active datasets to index and save
datasets:
  - "blocks"
  - "transactions"
  - "logs"

# Storage configuration
storage:
  type: "bigquery"
  project_id: "your-cloud-provider-project-id"
  location: "US"

# Monitoring configuration
monitoring:
  port: 9100
